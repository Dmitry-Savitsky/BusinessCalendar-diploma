{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "components/booking-widget/**/*.ts",
    "components/booking-widget/**/*.tsx",
    "types/**/*.d.ts",
    "styles/**/*.css"
  ],
  "exclude": ["node_modules"]
} 